version: 0.1
log:
  fields:
    service: registry
storage:
  cache:
    blobdescriptor: inmemory
  filesystem:
    rootdirectory: /var/lib/registry
http:
  addr: <%= @docker_registry_ip %>:9001
  tls:
    certificate: /etc/ssl/private/server-cert.pem
    key: /etc/ssl/private/server-cert.pem
  headers:
    X-Content-Type-Options: [nosniff]
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
